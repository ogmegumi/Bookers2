<div class="container">
 <div class="row">
  <div class="col-md-3">
  <!---部分テンプレート部分---->
<%= render 'users/user', user: @user, book: @book %>
  </div>
<!---以下よりbooks詳細画面---->
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
     <table class="table">
       <thead>
          <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
          </tr>
       </thead>
       <tbody>
        <% @books.each do |book| %>
         <tr>
          <td>
            <%= link_to user_path(book.user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg",size:'40x40' %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
             <%= book.title %>
            <% end %>
          </td>
          <td>
           <%= book.body %>
          </td>
         </tr>
        <% end %>
       </tbody>
     </table>
    </div>
  </div>
 </div>
