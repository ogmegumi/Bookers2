<% @users.each do |user| %>  <!--コントローラから渡された@post_images変数内から1つずつ取り出して、post_image変数へ格納-->
   <div class="profile-container px-5 px-sm-0">
      <div class="profile-row">
        <div class="profile-col-md-3">
          <h2>User info</h2>
          <%= image_tag('no_image.jpg') %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                  <th class="profile-name">name</th>
                  <th><% @user.name %></th>
              </tr>
              <tr>
                  <th>introduction</th>
                  <p><%= user_introduction.body %></p>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>  
  <% end %>
  <%= paginate @users %>
       <div class="row">
           <a class="btn btn-outline-secondary btn-block fas fa-user-cog esit_user(user.id)">
             ::before
           </a>
       </div>
       <h2 class="mt-3">New book</h2>
       <%= form_with model:@user, local:true do |f| %>
         <div class="form-group">
             <label for="book_title">Title</label><br>
             <%= f.text_field :title %>
         </div>
         <div class="form-group">
             <label for="book_opinion">Opinion</label><br>
             <%= f.text_area :body %>
             <br>
             <%= f.submit 'Create Book' %>
         </div>
       <% end %>
     </div>

