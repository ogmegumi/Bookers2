<div class="container">
   <!--サクセスメッセージappilication実装済み・バリテーション-->
   <% if @user.errors.any? %>
     <h3 style="color: red"><%= @user.errors.count %>error prohibited this book from being saved:</h2>
     <div id="error_explanation">
       <ul style="color: red">
         <% @user.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
      </div>
   <% end %>

    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
             <label for="user_name">Name</label><br>
             <%= f.text_field :name, id:"inputName", autofocus: true, class:"form-control" %>
          </div>
             <div class"form-group">
             <label for="user_image">Image</label><br>
             <div><%= f.attachment_field :profile_image %></div>
             </div>
          <div class"form-group">
             <label for="user_introduction">Introduction</label><br>
             <%= f.text_area :introduction,　id:"inputIntroduction", class:"form-control" %>
          </div>
          <br>
          <div class"form-group">
             <%= f.submit 'Update User', class:"btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
</div>

