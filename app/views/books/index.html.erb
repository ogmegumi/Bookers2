<!---部分テンプレート部分---->
<%= render 'users/user', user: @user %>
<!---以下よりbooks閲覧画面---->
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
     <table class="table table-hover table-inverse">
         <thead>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
           </tr>
         </thead>
         <tbody>
          <% @books.each do |book| %>
           <tr>
             <td><%= attachment_image_tag @user, :profile_image_id, :fill, 40, 40, fallback: "no_image.jpg" %><td>
             <td><%= book.title %></td>
             <td><%= book.body %></td>
           </tr>
          <% end %>
         </tbody>
       </table>
     </div>
   </div>
</div>

