<div class="container px-5 px-sm-0">
   <div class="row">
     <div class="col-md-3">
       <h2>User info</h2>
       <%= image_tag('no_image.jpg') %>
       <table class="table">
         <tbody>
           <tr></tr>
           <tr>
               <th>name</th>
               <!-- % @user.name %> -->
           </tr>
           <tr>
               <th>introduction</th>
               <!--<th>ここに投稿した内容をいれる</th>-->
           </tr>
         </tbody>
       </table>
       <div class="row">
           <a class="btn btn-outline-secondary btn-block fas fa-user-cog esit_user(user.id)">
             ::before
           </a>
       </div>
       
       <!--ここから画像投稿-->
       
       <h2 class="mt-3">New book</h2>
       <%= form_with model:@user, local:true do |f| %>
         <div class="form-group">
             <label for="book_title">Title</label><br>
             <%= f.text_field :title %>
         </div>
         <div class="form-group">
             <label for="book_opinion">Opinion</label><br>
             <%= f.text_area :body %>
             <br>
             <%= f.submit 'Create Book' %>
         </div>
       <% end %>
     </div>
     <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
       <table class="table table-hover table-inverse">
         <thead>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
           </tr>
         </thead>
       </table>
     </div>
   </div>
</div>

