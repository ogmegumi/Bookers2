<div class="container px-5 px-sm-0">
    <div class="row">
       <div class="col-md3">
        <!---部分テンプレート部分---->
         <%= render 'users/user', user: @user, book: @book %>
        <!---以下よりbooks詳細画面---->
     </div>
     <div class="col-md-8 offset-md-1">
       <h2>Book detail</h2>
         <table class="table table-hover table-inverse">
           <tbody>
             <tr>
               <td>
                  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
                  <%= link_to @user.name,user_path(@user.id) %>
               </td>
               <td>
                  <%=link_to @book.title, book_path(@book.id) %>
               </td>
               <td>
                  <%= @book.body %>
               </td>
               <% if @user.id == current_user.id %>
               <td>
                  <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %>
               </td>
               <% end %>
               <% if @user.id == current_user.id %>
               <td>
                  <%= link_to "Destroy", book_path(@book), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
               </td>
               <% end %>
             </tr>
           </tbody>
        </table>
      </div>
   </div>
</div>
